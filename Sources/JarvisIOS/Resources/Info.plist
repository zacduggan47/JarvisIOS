<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDisplayName</key>
    <string>Jarvis</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>UILaunchScreen</key>
    <dict/>
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
    </array>
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
    </dict>
    
    <!-- Permissions -->
    <key>NSFaceIDUsageDescription</key>
    <string>Unlock Jarvis with Face ID for privacy.</string>
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Allow Jarvis to access your location for local weather and context.</string>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>Allow Jarvis to access your location in the background for reminders.</string>
    <key>NSCalendarsUsageDescription</key>
    <string>Jarvis needs calendar access to manage your events.</string>
    <key>NSContactsUsageDescription</key>
    <string>Access contacts to help you message people.</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>Record voice messages.</string>
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>Convert your voice to text.</string>
    <key>NSHealthShareUsageDescription</key>
    <string>Track your health and fitness.</string>
    <key>NSHealthUpdateUsageDescription</key>
    <string>Update your health data (workouts, activity).</string>
    <key>NSHomeKitUsageDescription</key>
    <string>Control your smart home.</string>
    <key>NSAppleMusicUsageDescription</key>
    <string>Control your music.</string>
    <key>NSUserNotificationsUsageDescription</key>
    <string>Send you reminders and updates.</string>
    <key>NSCameraUsageDescription</key>
    <string>Take photos to share or analyze.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Access photos for analysis.</string>
    <key>NSSupportsLiveActivities</key>
    <true/>
</dict>
</plist>
